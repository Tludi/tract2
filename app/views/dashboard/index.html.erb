<h2>DASHBOARD</h2>
<div class="row">
  <div class="span6">
    <header class="navbar">
      <nav class="navbar-inner">
        <div class="container">
          <%= render 'dashboardnavigation' %>
        </div>
      </nav>
    </header>

    <div class="slidingDiv span5">
      <h2>New Project</h2>
      <%= render 'projectform', :object => @project %>
      <a href="#" class="show_hide">hide</a>
    </div>


    <table class="table table-striped ">
      <thead><tr>
        <th>ID</th>
        <th>Project</th>
      </tr></thead>
      <tbody><tr>
    <% @projects.take(3).each do |project| %>
      <tr>
        <td><%= project.id %></td>
        <td><%= link_to "#{project.name}".capitalize, "#" %></td>
        <td>
          <%= link_to "<i class='icon-edit'></i>".html_safe, edit_project_path(project), :controller => :projects, :method => :edit %>
          <%= link_to "<i class='icon-remove'></i>".html_safe, project_path(project), :confirm => "Are you sure?", :controller => :projects, :method => :delete %>
        </td>

      </tr>
    <% end -%>

      </tbody>
 
    </table>
         <p class="well span5 center"><%= link_to "Show All Projects", "#" %></p>
  </div>
  <div class="span4">
    <h2>Recent Actions</h2>
  </div>
</div>

