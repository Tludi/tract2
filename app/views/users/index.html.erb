<h1>Listing users</h1>

<table>
  <tr>
    <th></th>
    <th>Username</th>
    <th>Email</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <% if user == current_user %>
      <td>** </td>
    <% else %>
      <td></td>
    <% end -%>
    <td><%= user.username %></td>
    <td><%= user.email %> | </td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <% if user != current_user%>
    <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <% end -%>
  </tr>
<% end %>
</table>

